@model Agencia.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mt-3">Editar Reserva</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeDestino" class="control-label"></label>
                <input asp-for="NomeDestino" class="form-control" />
                <span asp-validation-for="NomeDestino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiasReserva" class="control-label"></label>
                <input asp-for="DiasReserva" class="form-control" />
                <span asp-validation-for="DiasReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataReserva" class="control-label"></label>
                <input asp-for="DataReserva" class="form-control" />
                <span asp-validation-for="DataReserva" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Salvar" class="btn btn-primary"  style="background-color: #6dc7b7; border: solid 1px #0d3834"/>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Voltar</a>
</div>
<br>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
